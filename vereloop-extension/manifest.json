{
  "manifest_version": 3,
  "name": "Vereloop Autofill",
  "version": "0.1.0",

  "description": "Autofill applicant info on ATS forms.",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": [
    "https://*/*"
  ],

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "all_frames": true,
    "run_at": "document_idle"
  }],
  "options_page": "options.html"
}
