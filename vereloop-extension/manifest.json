{
  "manifest_version": 3,
  "name": "Vereloop Autofill",
  "version": "0.1.0",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_title": "Vereloop Autofill",
    "default_popup": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
